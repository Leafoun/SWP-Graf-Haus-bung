datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client"
  output   = "client"
  runtime = "deno"
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String
  posts Post[]
}

model Post {
  id      Int    @id @default(autoincrement())
  name    String
  content String
  userId  Int
  user    User   @relation(fields: [userId], references: [id])
}