datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client"
  output   = "client"
  runtime = "deno"
}

model player {
  id     Int     @id @default(autoincrement())
  name   String
  age    Int
  teamId Int
  mannschaft Mannschaft @relation(fields: [teamId], references: [id])
}

model Mannschaft {
  id      Int      @id @default(autoincrement())
  name    String
  country String
  players player[]
}

model Stadion {
  id      Int    @id @default(autoincrement())
  name    String
  city    String
}

model Match {
  id         Int     @id @default(autoincrement())
  date       String
  location   String
  homeTeamId Int
  awayTeamId Int
  homeTeam   Mannschaft @relation("HomeTeam", fields: [homeTeamId], references: [id])
  awayTeam   Mannschaft @relation("AwayTeam", fields: [awayTeamId], references: [id])
}