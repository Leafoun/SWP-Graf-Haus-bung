generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Direction {
  up
  down
}

model Lift {
  id           String   @id @default(cuid())
  name         String
  currentFloor Int
  doorsOpen    Boolean  @default(false)
  createdAt    DateTime @default(now())
  // relations
  internalRequests InternalRequest[]
  externalCalls    ExternalCall[]
}

model ExternalCall {
  id        String   @id @default(cuid())
  floor     Int
  direction Direction
  createdAt DateTime @default(now())
  lift      Lift?    @relation(fields: [liftId], references: [id])
  liftId    String?
}

model InternalRequest {
  id        String   @id @default(cuid())
  floor     Int
  createdAt DateTime @default(now())
  lift      Lift     @relation(fields: [liftId], references: [id])
  liftId    String
}
